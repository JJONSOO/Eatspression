<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66C0FFFF"
    android:orientation="vertical"
    tools:context=".SettingActivity">



    <ImageView
        android:id="@+id/mainTextImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="90dp"
        android:src="@drawable/logo_text" />

    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:src="@drawable/logo_image" />

    <Spinner
        android:id="@+id/distanceSpinner"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/spinner_background"
        android:dropDownWidth="240dp"
        android:overlapAnchor="false"
        android:paddingRight="10dp"
        android:popupBackground="#FF7AEBE9"
        android:popupElevation="10dp"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/recommendNumSpinner"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/spinner_background"
        android:dropDownWidth="240dp"
        android:overlapAnchor="false"
        android:paddingRight="10dp"
        android:popupBackground="#FF7AEBE9"
        android:popupElevation="10dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="포탈 평점을 기준으로 정렬하여 선정됩니다."
        android:textSize="10sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="190dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_background"
        android:text="시작하기"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/tab_background"
        >
        <Button
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_button_background"
            android:text="Home"
            android:drawableTop="@drawable/ic_home_black_24dp"
            android:textSize="8sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:paddingTop="5dp"/>
        <Button
            android:id="@+id/mainButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selected_tap_button"
            android:drawableTop="@drawable/eatspression_ic_resize"
            android:text="EatsPression"
            android:textSize="8sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:paddingTop="5dp"/>

        <Button
            android:id="@+id/customButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_button_background"
            android:drawableTop="@drawable/eatspression_custom_ic_resize"
            android:layout_weight="1"
            android:textSize="8sp"
            android:text="Custom"
            android:textStyle="bold"
            android:paddingTop="5dp"/>

        <Button
            android:id="@+id/infoButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_button_background"
            android:drawableTop="@drawable/info_ic_resize"
            android:layout_weight="1"
            android:textSize="8sp"
            android:text="Manual"
            android:textStyle="bold"
            android:paddingTop="5dp"
            />
    </LinearLayout>

</LinearLayout>